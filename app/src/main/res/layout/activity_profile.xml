<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#111111">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Top bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:paddingBottom="24dp">

            <ImageView
                android:id="@+id/btnBack"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_media_previous"
                android:tint="@android:color/white" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Profile"
                android:textSize="20sp"
                android:textColor="@android:color/white"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnSupport"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@android:drawable/ic_menu_help"
                android:tint="@android:color/white" />
        </LinearLayout>

        <!-- Profile Image and Info -->
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/profileImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            android:src="@drawable/ic_launcher_foreground"
            app:civ_border_width="2dp"
            app:civ_border_color="@android:color/darker_gray" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="8dp">

            <TextView
                android:id="@+id/tvUserName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="andaz Kumar"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/btnEditProfile"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginStart="8dp"
                android:src="@android:drawable/ic_menu_edit"
                android:tint="@android:color/white" />
        </LinearLayout>

        <TextView
            android:id="@+id/tvMemberSince"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="member since Dec, 2020"
            android:textColor="#CCCCCC"
            android:textSize="14sp"
            android:gravity="center"
            android:paddingBottom="16dp" />

        <!-- Section: Credit Score -->
        <LinearLayout
            android:id="@+id/layoutCreditScore"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:background="#1E1E1E"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="credit score • REFRESH AVAILABLE"
                android:textColor="#00FF00"
                android:paddingStart="12dp"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCreditScore"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="757"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Section: Lifetime Cashback -->
        <LinearLayout
            android:id="@+id/layoutCashback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:background="#1E1E1E"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="lifetime cashback"
                android:paddingStart="12dp"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/tvCashback"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹3"
                android:textColor="@android:color/white"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Section: Bank Balance -->
        <LinearLayout
            android:id="@+id/layoutBankBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:background="#1E1E1E"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_launcher_foreground"
                android:tint="#FFFFFF" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="bank balance"
                android:paddingStart="12dp"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Rewards section -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="YOUR REWARDS &amp; BENEFITS"
            android:textColor="#888888"
            android:textStyle="bold"
            android:paddingTop="16dp"
            android:paddingBottom="8dp"
            android:textSize="14sp" />

        <!-- Section: cashback balance -->
        <LinearLayout
            android:id="@+id/layoutCashbackBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:background="#1E1E1E"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="cashback balance\n₹0"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingStart="24dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Section: coins -->
        <LinearLayout
            android:id="@+id/layoutCoins"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:background="#1E1E1E"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="coins\n₹26,46,583"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingStart="24dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Section: win upto Rs 1000 -->
        <LinearLayout
            android:id="@+id/layoutRewards"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingVertical="12dp"
            android:gravity="center_vertical"
            android:background="#1E1E1E"
            android:paddingHorizontal="12dp"
            android:layout_marginBottom="8dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="win upto Rs 1000\nrefer and earn"
                android:textColor="#FFFFFF"
                android:textSize="14sp"
                android:paddingStart="24dp"
                android:paddingTop="4dp"
                android:paddingBottom="4dp"
                android:lineSpacingExtra="2dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="check"
                android:textColor="#CCCCCC"
                android:textSize="16sp" />
        </LinearLayout>

        <!-- Section: Transaction & Support -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TRANSACTION &amp; SUPPORT"
            android:textColor="#888888"
            android:textStyle="bold"
            android:paddingTop="14dp"
            android:paddingBottom="8dp"
            android:textSize="14sp" />





    </LinearLayout>
</ScrollView>